%div.span12
  %h1 Login

  = form_for @user_session do |f|
    = f.object.errors.full_messages if f.object.errors.any?
    %p
      = f.label :username
      %br
      = f.text_field :username
    %p
      = f.label :password
      %br
      = f.password_field :password

    %p
      = f.submit "Submit"
