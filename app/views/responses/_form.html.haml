= form_for @response do |f|
  - if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question_id
    = f.number_field :question_id
  .field
    = f.label :patient_id
    = f.number_field :patient_id
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
