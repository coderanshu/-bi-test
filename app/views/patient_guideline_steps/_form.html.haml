= form_for @patient_guideline_step do |f|
  - if @patient_guideline_step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient_guideline_step.errors.count, "error")} prohibited this patient_guideline_step from being saved:"
      %ul
        - @patient_guideline_step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :patient_guideline_id
    = f.number_field :patient_guideline_id
  .field
    = f.label :guideline_step_id
    = f.number_field :guideline_step_id
  .field
    = f.label :is_met
    = f.check_box :is_met
  .field
    = f.label :requires_data
    = f.check_box :requires_data
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
