= form_for @alert_guideline_step do |f|
  - if @alert_guideline_step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alert_guideline_step.errors.count, "error")} prohibited this alert_guideline_step from being saved:"
      %ul
        - @alert_guideline_step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :alert_id
    = f.number_field :alert_id
  .field
    = f.label :patient_guideline_step_id
    = f.number_field :patient_guideline_step_id
  .actions
    = f.submit 'Save'
