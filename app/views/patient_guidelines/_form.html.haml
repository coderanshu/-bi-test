= form_for @patient_guideline do |f|
  - if @patient_guideline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient_guideline.errors.count, "error")} prohibited this patient_guideline from being saved:"
      %ul
        - @patient_guideline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :guideline_id
    = f.number_field :guideline_id
  .field
    = f.label :patient_id
    = f.number_field :patient_id
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
